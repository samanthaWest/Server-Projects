<div class="row">
    <div class="col-md-12">
        <h1>{{title}}
            <a href="/employees/add" class="btn btn-success pull-right" padding="2px" style="margin-top:5px;">Add New Employee</a>
        </h1>
        <h1>
            <form method="get" action="/search">
            <input type="text" id="searchbar" name="search" placeholder="Search by employee id...." value="">
            </form>
            </h1>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="table-responsive"></div>
        <table class="table" >
        <thead>
            <tr>
                <th>Employee Num</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Addresse</th>
                <th>Manager #ID</th>
                <th>Status</th>
                <th>Department</th>
                <th>Hired On</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
            <tr>
        <td><a href="/employees/{{employeeNum}}" >{{employeeNum}}</a></td>
        <td><a href="/employees/{{employeeNum}}" >{{firstName}} {{last_name}}</a></td>
        <td><a href="mailto: {{email}}" >{{email}}</a></td>  
        <td>{{addressStreet}} {{addressCity}} {{addressPostal}}</td> 
        <td><a href="/employee/manager/{{employeeManagerNum}}"> {{employeeManagerNum}}</a></td>  
        <td>{{status}}</td> 
        <td><a href="/departments/{{department}}" > {{department}}</a></td> 
        <td>{{hireDate}}</td> 
        <td><a href="/employee/delete/{{employeeNum}}" class="btn btn-danger">Remove Employee</a></td>
            </tr>
         {{/each}}
       </tbody>
       </table>
    </div>
    </div>
</div>