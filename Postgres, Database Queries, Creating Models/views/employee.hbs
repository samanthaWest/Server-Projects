<div class="row">
    <div class="col-md-12">
        {{#each viewData.data}}
        <h1>{{firstName}} {{last_name}} - Employee: {{employeeNum}} </h1>        
        <form method="post" action="/employee/update">
            <fieldset>
                <legend>Personal Information</legend>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                             <input class="form-control" id="employeeNum" name="employeeNum" type="hidden" value="{{employeeNum}}" />
                            <label for="firstName">First Name:</label>
                            <input class="form-control" id="firstName" name="firstName" type="text" value="{{firstName}}" />
                        </div>
                    </div>
                  <div class="col-md-6">
                        <div class="form-group">
                            <label for="last_name">Last Name:</label>
                            <input class="form-control" id="lastName" name="lastName" type="text" value="{{last_name}}" />
                        </div>
                    </div>
                </div>
                <div class ="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input class="form-control" id="email" name="email" type="text"  value="{{email}}" />
                        </div>
                    </div>
                     <div class="col-md-6">
                        <div class="form-group">
                            <label for="SSN">Social Security Num:</label>
                            <input class="form-control" id="SSN" name="SSN" type="text" value="{{SSN}}" />
                        </div>
                </div>
                <div class ="row">
                     <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressStreet">Address (Street):</label>
                            <input class="form-control" id="addressStreet" name="addressStreet" type="text" value="{{addressStreet}}" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressCity">Address (City):</label>
                            <input class="form-control" id="addressCity" name="addressCity" type="text" value="{{addresCity}}" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressState">Address (State):</label>
                            <input class="form-control" id="addressStreet" name="addressStreet" type="text" value="{{addressState}}" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressPostal">Adress (Zip Code):</label>
                            <input class="form-control" id="addressPostal" name="addressPostal" type="text" value="{{addressPostal}}" />
                        </div>
                    </div>
                </div>
            </fieldset>
            

            <fieldset>
                <Legend> Company Information </Legend>
                <div class ="row">
                     <div class="col-md-3">
                        <div class="form-group">
                            <label for="isManager">Manager:</label>
                            <input class="form-control" type ="checkbox" id="isManager" name="isManager"{{#if isManager}} checked="checked" {{/if}}/>
                        </div>
                    </div>
                     <div class="col-md-3">
                        <div class="form-group">
                            <label for="employeeManagerNum">Employee's Manager Number:</label>
                            <input class="form-control" type ="text" id="employeeManagerNum" name="employeeManagerNum" value="{{employeeManagerNum}}" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <Label> Status: </Label> </br>
                            <label class="checkbox-inline">
                                <input type ="radio" id="statusFT" name="status" value="Full Time"{{#equal status "Full Time"}} checked="checked" {{/equal}}/> Full Time
                            </label>
                            <label class="checkbox-inline">
                                <input type ="radio" id="statusFT" name="status" value="Part Time"{{#equal status "Part Time"}} checked="checked"{{/equal}}/> Part Time
                            </label>
                        </div>
                    </div>
                
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="department">Department</label>
                            {{#if viewData.departments}}
                                <select class="form-control" name="department" id="department">
                                <option value="{{departments.departmentId}}" {{#if selected}} selected {{/if}} >{{departments.departmentName}} </option>
                                </select>
                            {{else}}
                                 <div>No Departments</div>
                            {{/if}}

                    </div>
                </div>
            </div>
            <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="hireDate">Hire Date</label>
                            <input class="form-control" id="hireDate" name="hireDate" type="text" value="{{hireDate}}" />
                            </div>
                        </div>
                    </div>
            </fieldset>
            <hr />
            <input type="submit" class="btn btn-primary pull-right" value="Update Employee" /><br /><br /><br />
        </form>
        {{/each}}
    </div>
</div>
