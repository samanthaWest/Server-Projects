<div class="row">
    <div class="col-md-12">
        
        <h1>{{#each data}}{{firstName}} {{last_name}} - Employee: {{employeeNum}} {{/each}}</h1>

        <form method="post" action="/employee/update">

            <fieldset>
                <legend>Personal Information</legend>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                             <input class="form-control" id="employeeNum" name="employeeNum" type="hidden" value="{{#each data}}{{employeeNum}}{{/each}}" />
                            <label for="firstName">First Name:</label>
                            <input class="form-control" id="firstName" name="firstName" type="text" value="{{#each data}}{{firstName}}{{/each}}" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="last_name">Last Name:</label>
                            <input class="form-control" id="lastName" name="lastName" type="text" value="{{#each data}}{{last_name}}{{/each}}" />
                        </div>
                    </div>
                </div>
                <div class ="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input class="form-control" id="email" name="email" type="text"  value="{{#each data}}{{email}}{{/each}}" />
                        </div>
                    </div>
                     <div class="col-md-6">
                        <div class="form-group">
                            <label for="SSN">Social Security Num:</label>
                            <input class="form-control" id="SSN" name="SSN" type="text" value="{{#each data}}{{SSN}}{{/each}}" />
                        </div>
                </div>
                <div class ="row">
                     <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressStreet">Address (Street):</label>
                            <input class="form-control" id="addressStreet" name="addressStreet" type="text" value="{{#each data}}{{addressStreet}}{{/each}}" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressCity">Address (City):</label>
                            <input class="form-control" id="addressCity" name="addressCity" type="text" value="{{#each data}}{{addresCity}}{{/each}}" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressState">Address (State):</label>
                            <input class="form-control" id="addressStreet" name="addressStreet" type="text" value="{{#each data}}{{addressState}}{{/each}}" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressPostal">Adress (Zip Code):</label>
                            <input class="form-control" id="addressPostal" name="addressPostal" type="text" value="{{#each data}}{{addressPostal}}{{/each}}" />
                        </div>
                    </div>
                </div>
            </fieldset>
            

            <fieldset>
                <Legend> Company Information </Legend>
                <div class ="row">
                     <div class="col-md-3">
                        <div class="form-group">
                            <label for="isManager">Manager:</label>
                            <input class="form-control" type ="checkbox" id="isManager" name="isManager" {{#each data}} {{#if isManager}} checked="checked" {{/if}} {{/each}}/>
                        </div>
                    </div>
                     <div class="col-md-3">
                        <div class="form-group">
                            <label for="employeeManagerNum">Employee's Manager Number:</label>
                            <input class="form-control" type ="text" id="employeeManagerNum" name="employeeManagerNum" value="{{#each data}}{{employeeManagerNum}}{{/each}}" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <Label> Status: </Label> </br>
                            <label class="checkbox-inline">
                                <input type ="radio" id="statusFT" name="status" value="Full Time" {{#each data}} {{#equal status "Full Time"}} checked="checked" {{/equal}} {{/each}}/> Full Time
                            </label>
                            <label class="checkbox-inline">
                                <input type ="radio" id="statusFT" name="status" value="Part Time" {{#each data}} {{#equal status "Part Time"}} checked="checked"{{/equal}} {{/each}} /> Part Time
                            </label>
                        </div>
                    </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="department">Department</label>
                            <select class="form-control" name="department" id="department"/>
                                    <option value="1" {{#each data}} {{#equal department "1" }} selected="selected" {{/equal}} {{/each}}>1</option>
                                    <option value="2" {{#each data}} {{#equal department "2" }} selected="selected" {{/equal}} {{/each}}>2</option>
                                    <option value="3" {{#each data}} {{#equal department "3" }} selected="selected" {{/equal}} {{/each}}>3</option>
                                    <option value="4" {{#each data}} {{#equal department "4" }} selected="selected" {{/equal}} {{/each}}>4</option>
                                    <option value="5" {{#each data}} {{#equal department "5" }} selected="selected" {{/equal}} {{/each}}>5</option>
                                    <option value="6" {{#each data}} {{#equal department "6" }} selected="selected" {{/equal}} {{/each}}>6</option>
                                    <option value="7" {{#each data}} {{#equal department "7" }} selected="selected" {{/equal}} {{/each}}>7</option>
                            </select>
                    </div>
                </div>
            </div>
            <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="hireDate">Hire Date</label>
                            <input class="form-control" id="hireDate" name="hireDate" type="text" value="{{#each data}}{{hireDate}}{{/each}}" />
                            </div>
                        </div>
                    </div>
            </fieldset>
            <hr />
            <input type="submit" class="btn btn-primary pull-right" value="Update Employee" /><br /><br /><br />
        </form>
    </div>
</div>
